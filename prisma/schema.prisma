generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // For migrations
}

enum Role {
  ADMIN
  STAFF
  AML
  AGENT
}

enum Currency {
  WST
  AUD
  USD
}

enum ProofOfAddress {
  BILL
  BANK_STATEMENT
  IRD_LETTER
  GOVT_LETTER
  POWER_BILL
  WATER_BILL
  COUNCIL_RATES
  OTHER
}

enum SourceOfFunds {
  SALARY_WAGES
  SAVINGS
  LOAN_FUNDS
  SALE_OF_PROPERTY
  SELF_EMPLOYED
  FAMILY_CONTRIBUTIONS
  FUNDRAISING_RAFFLE
  OTHER
}

enum IdDocumentType {
  DRIVERS_LICENSE
  PASSPORT
  NATIONAL_ID
  BANK_CARD
  BIRTH_CERTIFICATE
  OTHER
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  roles        String        @default("STAFF") // Comma-separated roles: "STAFF,AML" or "ADMIN,AML"
  createdAt    DateTime      @default(now())
  transactions Transaction[] @relation("TransactionCreatedBy")
}

model Customer {
  id           String           @id @default(cuid())
  customerId   String           @unique // e.g. CUST-2025-000123
  firstName    String
  lastName     String
  fullName     String           // first + last
  dob          DateTime
  phone        String           @unique // E.164
  email        String?
  address      String?
  // Enhanced AML fields (optional, for >= NZ$1,000 transactions)
  streetAddress String?
  suburb        String?
  city          String?
  postcode      String?
  homePhone     String?
  mobilePhone   String? // Usually same as phone
  occupation    String?
  employerName  String?
  employerAddress String?
  employerPhone String?
  // Relations
  agent        Agent?           @relation("CustomerAgent", fields: [agentId], references: [id])
  agentId      String?          // Which agent registered this customer
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  ids          CustomerIdFile[]
  transactions Transaction[]

  @@index([agentId])
}

model CustomerIdFile {
  id           String         @id @default(cuid())
  customer     Customer       @relation(fields: [customerId], references: [id])
  customerId   String
  filePath     String
  mimeType     String
  documentType IdDocumentType @default(OTHER)
  createdAt    DateTime       @default(now())
}

model Transaction {
  id                     String          @id @default(cuid())
  txnNumber              String          @unique // e.g. TXN-2025-10-000654
  customer               Customer        @relation(fields: [customerId], references: [id])
  customerId             String
  date                   DateTime        @default(now())
  // Beneficiary
  beneficiaryName        String
  beneficiaryVillage     String?
  beneficiaryPhone       String?
  bank                   String?
  accountNumber          String?
  accountName            String?
  // Sender snapshot (at time of txn)
  senderName             String
  senderAddress          String?
  senderStreetAddress    String?  // For >= NZ$1,000
  senderSuburb           String?  // For >= NZ$1,000
  senderCity             String?  // For >= NZ$1,000
  senderPostcode         String?  // For >= NZ$1,000
  senderHomePhone        String?  // For >= NZ$1,000
  senderMobilePhone      String?  // For >= NZ$1,000 (copy of senderPhone)
  senderPhone            String
  senderEmail            String?
  occupation             String?
  purposeOfTransfer      String?
  // Employment Details (For >= NZ$1,000)
  employerName           String?
  employerAddress        String?
  employerPhone          String?
  // Enhanced AML for >= NZ$1,000
  reasonForRemittance    String?  // Reason for Funds Remittance
  relationshipToBeneficiary String? // Relationship to Beneficiary
  // Money (store cents as Int)
  amountNzdCents         Int
  feeNzdCents            Int
  rate                   Float // NZD -> foreign
  currency               Currency
  totalPaidNzdCents      Int
  totalForeignReceived   Float
  // AML/KYC (from paper form)
  id1CountryAndType      String?
  id1Number              String?
  id1IssueDate           DateTime?
  id1ExpiryDate          DateTime?
  id2CountryAndType      String?
  id2Number              String?
  id2IssueDate           DateTime?
  id2ExpiryDate          DateTime?
  dob                    DateTime // must be >= 18 years
  verifiedWithOriginalId Boolean
  proofOfAddressType     ProofOfAddress?
  sourceOfFunds          SourceOfFunds?
  sourceOfFundsDetails   String?  // Additional details about source of funds
  bankAccountDetails     String?  // Bank account number for >= NZ$1,000
  proofDocumentsProvided String?  // List of proof/documents provided
  // AML Tracking
  isPtrRequired          Boolean         @default(false) // PTR required for >= NZD 1,000
  isGoAmlExportReady     Boolean         @default(false) // Ready for goAML export
  goAmlExportedAt        DateTime?       // When exported to goAML
  // Agent tracking
  agent                  Agent?          @relation("TransactionAgent", fields: [agentId], references: [id])
  agentId                String?         // Which agent processed this transaction
  createdBy              User?           @relation("TransactionCreatedBy", fields: [createdById], references: [id])
  createdById            String?
  // Transaction Status
  status                 TransactionStatus? @relation("TransactionStatus", fields: [statusId], references: [id])
  statusId               String?         // Current status of transaction
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @default(now()) @updatedAt

  @@index([customerId, date])
  @@index([date, currency])
  @@index([isPtrRequired])
  @@index([isGoAmlExportReady])
  @@index([agentId, date])
  @@index([statusId])
}

model ExchangeRate {
  id          String   @id @default(cuid())
  dateKey     String   @unique // "YYYY-MM-DD"
  NZD_WST     Float
  NZD_AUD     Float
  NZD_USD     Float
  source      String   @default("MANUAL") // "API" or "MANUAL"
  apiResponse String?  // JSON response from API (for debugging)
  updatedById String?
  updatedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
}

model Counter {
  name  String @id // "customer", "transaction"
  value Int
}

model DocumentType {
  id        String   @id @default(cuid())
  name      String   @unique
  label     String
  isDefault Boolean  @default(false)
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AgentStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum ActivityType {
  USER_LOGIN
  USER_LOGOUT
  CUSTOMER_CREATED
  CUSTOMER_UPDATED
  CUSTOMER_VIEWED
  CUSTOMER_ID_UPLOADED
  CUSTOMER_ID_VIEWED
  TRANSACTION_CREATED
  TRANSACTION_VIEWED
  EXCHANGE_RATE_UPDATED
  SETTINGS_CHANGED
  REPORT_GENERATED
  SEARCH_PERFORMED
  AGENT_CREATED
  AGENT_UPDATED
}

model ActivityLog {
  id          String       @id @default(cuid())
  type        ActivityType
  userId      String?
  userEmail   String?
  description String
  entityType  String? // "Customer", "Transaction", "User", etc.
  entityId    String? // ID of the entity affected
  metadata    String? // JSON string for additional data
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime     @default(now())

  @@index([userId, createdAt])
  @@index([type, createdAt])
  @@index([entityType, entityId])
  @@index([createdAt])
}

model EmailSettings {
  id           String   @id @default(cuid())
  enabled      Boolean  @default(false)
  tenantId     String?  // Azure AD Tenant ID
  clientId     String?  // Azure AD Application (Client) ID
  clientSecret String?  // Azure AD Client Secret (encrypted)
  senderEmail  String?  // Email address to send from
  senderName   String?  // Display name for sender
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ExchangeRateSettings {
  id                    String   @id @default(cuid())
  autoUpdateEnabled     Boolean  @default(false)
  updateFrequencyHours  Int      @default(24) // How often to check for updates (in hours)
  profitMarginPercent   Float    @default(0.0) // Profit margin % to add to rates
  lastAutoUpdateAt      DateTime?
  nextAutoUpdateAt      DateTime?
  updatedById           String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model FeeSettings {
  id                String   @id @default(cuid())
  defaultFeeNzd     Float    @default(5.0) // Default transaction fee in NZD
  feeType           String   @default("FIXED") // "FIXED" or "PERCENTAGE"
  feePercentage     Float    @default(0.0) // If percentage-based, the percentage to charge
  minimumFeeNzd     Float    @default(0.0) // Minimum fee if using percentage
  maximumFeeNzd     Float?   // Maximum fee if using percentage (optional)
  updatedById       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model BusinessBrandingSettings {
  id                String   @id @default(cuid())
  businessName      String   @default("Samoa Finance Money Transfer")
  fontSize          String   @default("36") // Font size in pixels
  fontColor         String   @default("#1e40af") // Hex color
  fontFamily        String   @default("Inter") // Font family name
  footerText        String?  // Footer text to display globally
  updatedById       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Agent {
  id            String        @id @default(cuid())
  agentCode     String        @unique // e.g. AGT-001, AGT-002
  name          String
  location      String?       // Village/Town/City
  phone         String?
  email         String?
  address       String?
  qrCodeUrl     String?       // URL for the QR code image (if generated and stored)
  status        AgentStatus   @default(ACTIVE)
  isHeadOffice  Boolean       @default(false) // True for the main head office agent
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  createdById   String?
  transactions  Transaction[] @relation("TransactionAgent")
  customers     Customer[]    @relation("CustomerAgent")
  eodRecords    EodReconciliation[]

  @@index([agentCode])
  @@index([status])
}

model TransactionStatus {
  id           String        @id @default(cuid())
  name         String        @unique // e.g. OPEN, CLOSE, IN_PROGRESS
  label        String        // Display name
  color        String?       // Hex color for UI (e.g. #10b981)
  isDefault    Boolean       @default(false)
  isActive     Boolean       @default(true)
  order        Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[] @relation("TransactionStatus")

  @@index([isActive, order])
}

enum EodStatus {
  PENDING
  COMPLETED
  DISCREPANCY
}

model EodReconciliation {
  id                    String     @id @default(cuid())
  date                  DateTime   // Date of the reconciliation (end of day)
  agent                 Agent?     @relation(fields: [agentId], references: [id])
  agentId               String?    // Null for head office
  // System calculated amounts (in cents)
  systemTotalCents      Int        // Total from all transactions in system
  systemTransactionCount Int       // Number of transactions in system
  // Physically counted amounts (in cents)
  cashReceivedCents     Int        // Physical cash counted
  // Reconciliation
  differenceCents       Int        // Difference between system and physical
  status                EodStatus  @default(PENDING)
  notes                 String?    // Notes about discrepancies or issues
  completedBy           String?    // User ID who completed the EOD
  completedByEmail      String?    // User email who completed the EOD
  completedAt           DateTime?  // When the EOD was marked as completed
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt

  @@unique([date, agentId]) // One EOD per agent per day
  @@index([date, status])
  @@index([agentId, date])
}
